spring:
  data:
    mongodb:
      # Para MongoDB local
      host: localhost
      port: 27017
      database: fechamento_caixa
      authentication-database: admin
      # username: admin
      # password: password

      # Para MongoDB Atlas, usar URI completa:
      # uri: mongodb+srv://username:password@cluster.mongodb.net/database

      auto-index-creation: true

  servlet:
    multipart:
      max-file-size: 10MB
      max-request-size: 10MB

server:
  port: 8080
  servlet:
    context-path: /api
  error:
    include-message: always
    include-binding-errors: always

app:
  google:
    drive:
      credentials-file: ${GOOGLE_DRIVE_CREDENTIALS:classpath:credentials.json}
      backup-folder-id: ${GOOGLE_DRIVE_BACKUP_FOLDER:}
      tokens-folder: ${user.home}/.tokens/fechamento-caixa
      application-name: Fechamento de Caixa
  backup:
    google-drive:
      credentials-file: credentials.json
      backup-folder-id: your-folder-id-here
  javafx:
    title: Sistema de Fechamento de Caixa
    width: 1024
    height: 768
  jwt:
    secret: ${JWT_SECRET:your-256-bit-secret-replace-in-production}
    expiration: ${JWT_EXPIRATION:86400000} # 24 hours

logging:
  level:
    root: INFO
    '[com.controle.fechamentocaixa]': DEBUG
    '[org.springframework.data.mongodb]': DEBUG
    '[org.springframework.security]': DEBUG

---

# Profile-specific overrides: dev
spring:
  config:
    activate:
      on-profile: dev
  data:
    mongodb:
      host: localhost
      port: 27017
      database: fechamento_caixa_dev
      authentication-database: admin
  servlet:
    multipart:
      max-file-size: 20MB
      max-request-size: 20MB

server:
  port: 8081
  servlet:
    context-path: /api

logging:
  level:
    root: INFO
    '[com.controle.fechamentocaixa]': DEBUG
    '[org.springframework.data.mongodb]': DEBUG
    '[org.springframework.security]': DEBUG

---
# Profile-specific overrides: prod
spring:
  config:
    activate:
      on-profile: prod
  data:
    mongodb:
      # Usar variáveis de ambiente em produção
      uri: ${MONGODB_URI}

server:
  port: ${SERVER_PORT:8080}

app:
  jwt:
    secret: ${JWT_SECRET}
    expiration: ${JWT_EXPIRATION:86400000}

logging:
  level:
    root: WARN
    '[com.controle.fechamentocaixa]': INFO
