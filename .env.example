# ===== MCPOmni Connect Configuration =====

# Redis local Configuration
REDIS_URL="redis://localhost:6379/0"                    # Required: Local Redis URL
REDIS_IP="your_redis_ip_here"                          # Required: Redis server IP (e.g., 192.168.232.231)
REDIS_URL_FULL="redis://your_redis_ip:6379"            # Required: Full Redis URL for remote server
REDIS_HOST="localhost"                                  # Required: Local Redis host
REDIS_HOST_IP="your_redis_ip_here"                     # Required: Redis server IP for main config
REDIS_PORT=6379                                         # Required: Redis port
REDIS_PASSWORD="your_redis_password_here"              # Required: Redis password
REDIS_DB=0                                              # Required: Redis database number

# Redis MCP Configuration
REDIS_DIRECTORY="C:/path/to/your/redis/mcp-redis"      # Required: Path to Redis MCP directory
REDIS_HOST_FULL="127.0.0.1"                           # Required: MCP Redis host
REDIS_USERNAME="default"                               # Required: Redis username
REDIS_PWD=""                                           # Optional: Redis password for MCP (pode ficar vazio)
REDIS_SSL=false                                         # Required: Redis SSL setting

# LLM Principal (Google Gemini)
LLM_API_KEY="your_llm_api_key_here"                    # Required: Format: AIza...
LLM_PROVIDER="google"                                   # Required: google, openai, anthropic, mistral, xai, azure, ollama
LLM_MODEL="gemini-2.0-flash-exp"                       # Required: Model name

# MCP Task Master AI
ANTHROPIC_API_KEY="your_anthropic_api_key_here"        # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"      # Optional: Format: pplx-...
GOOGLE_API_KEY="your_google_api_key_here"              # Required: Format: AIza...

# GitHub Integration
GITHUB_TOKEN="your_github_token_here"                  # Optional: Format: gho_... or github_pat_...
GITHUB_PERSONAL_ACCESS_TOKEN="your_github_pat_here"    # Optional: Format: ghp_...

# Supabase Integration
SUPABASE_ACCESS_TOKEN="your_supabase_access_token_here" # Optional: Format: sbp_...

# Supermemory Integration
SUPERMEMORY_SSE_ID="your_supermemory_sse_id_here"      # Optional: Supermemory SSE workspace ID
SUPERMEMORY_API_KEY="your_supermemory_api_key_here"    # Optional: Supermemory API key

# MCPOmni Connect Settings
MCPOMNI_PORT=8000                                       # Required: MCPOmni server port
MCPOMNI_HOST="localhost"                               # Required: MCPOmni server host
MCPOMNI_LOG_LEVEL="INFO"                               # Required: Log level (INFO, DEBUG, WARNING, ERROR)

# Optional Keys
MISTRAL_API_KEY="YOUR_MISTRAL_KEY_HERE"                # Optional: Mistral AI API key
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"          # Optional: OpenRouter API key
XAI_API_KEY="YOUR_XAI_KEY_HERE"                        # Optional: xAI API key
AZURE_OPENAI_API_KEY="YOUR_AZURE_KEY_HERE"             # Optional: Azure OpenAI API key
OLLAMA_API_KEY="YOUR_OLLAMA_API_KEY_HERE"              # Optional: Ollama API key

# Search APIs
BRAVE_API_KEY="your_brave_api_key_here"                # Optional: Brave search API key
BRAVE_BASE_URL="https://api.search.brave.com/res/v1/web/search" # Required: Brave API base URL

# Azure OpenAI Configuration
AZURE_OPENAI_BASE_URL="https://your-endpoint.openai.azure.com/" # Required: Azure OpenAI endpoint URL

# Database Configuration
DB_HOST="your_db_host_here"                            # Required: Database host (e.g., sql-server.postgres.database.azure.com)
DB_USER="your_db_user_here"                           # Required: Database user
DB_PASSWORD="your_db_password_here"                    # Required: Database password
DB_NAME="your_db_name_here"                           # Required: Database name (e.g., postgres)
DB_PORT=5432                                           # Required: Database port