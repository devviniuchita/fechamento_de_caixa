<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.seucodigo.fecharcaixa.ui.DashboardController">
    <top>
        <HBox styleClass="header">
            <Label fx:id="welcomeLabel" styleClass="welcome-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Sair" onAction="#handleLogout" styleClass="logout-button"/>
        </HBox>
    </top>
    
    <left>
        <VBox styleClass="sidebar">
            <Button text="Fechamento de Caixa" onAction="#showCashClosing" styleClass="menu-button"/>
            <Button text="Relatórios" onAction="#showReports" styleClass="menu-button"/>
            <Button text="Usuários" onAction="#showUsers" styleClass="menu-button" 
                    visible="${user.role == 'ADMIN'}"/>
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
</BorderPane> 